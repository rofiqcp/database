# Google OAuth2 Credentials
# Copy this file to .env and fill in your values
# (the backend reads these from application.properties, not from .env directly)

# Path to credentials.json downloaded from Google Cloud Console
GOOGLE_CREDENTIALS_FILE=credentials/credentials.json

# Path where OAuth tokens will be persisted after first login
GOOGLE_TOKENS_FILE=credentials/tokens.json

# Must match the redirect URI registered in Google Cloud Console
GOOGLE_REDIRECT_URI=http://localhost:8080/api/auth/callback

# Frontend origin (used for CORS and post-OAuth redirect)
FRONTEND_URL=http://localhost:5173
